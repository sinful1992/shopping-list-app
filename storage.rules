rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Receipt images - only family group members can read/write
    // The familyGroupId custom claim is set by Cloud Function when user joins/creates a group
    match /receipts/{familyGroupId}/{allPaths=**} {
      allow read, write: if request.auth != null
        && request.auth.token.familyGroupId == familyGroupId;
    }

    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
