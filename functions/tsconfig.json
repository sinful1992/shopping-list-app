{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": ["src", "../shared"]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared"
  ]
}
